{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": false,
    "strict": true,
    "lib": ["esnext"],
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "outDir": "build",
    "paths": {
      "src/*": ["src/*"],
      "@/util/*": ["src/util/*"],
      "@/types/*": ["src/types/*"],
      "@/modules/*": ["src/modules/*"],
      "@/lib/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
